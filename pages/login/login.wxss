/* pages/login/login.wxss */
.header {
  padding: 20rpx;
  font-size: 60rpx;
}

.content {
  padding: 80rpx 0;
  flex: 1;
  width: 80%;
}

.form-item {
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-item text {
  width: 25%;
}

.form-item input {
  padding: 10rpx 20rpx;
  display: inline-block;
  flex: 1;
  border-radius: 4px;
  border: 1px solid #ccc;
}

.btn {
  margin-top: 80rpx;
}